<%- include('partials/header') %>
<main>
    <section class="blog" style="padding: 20px;">
        <h1><%= post.title %></h1>
        <p><%= post.content %></p>
        <p><em>Posted on: <%= new Date(post.created_at).toLocaleString() %></em></p>
    </section>
    <section class="giving">
        <div class="giving-img item slide slide-right">
            <img loading="lazy" src="/images/donation.jpg" alt="">
        </div>
        <div class="giving-text item">
            <p>
                Each of you should give what you have decided in your heart to give, not reluctantly or under compulsion, for God loves a cheerful giver. <br> <span class="verse">2 Cor 9:7</span>
            </p>
            <form action="/donate" method="get">
                <button type="submit">Give online</button>
            </form>
        </div>
    </section>
</main>
<%- include('partials/footer') %>